* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.app-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  transition: background-color 0.3s ease;
}

/* Controls Header */
.controls-section {
  padding: 2rem;
  max-width: 800px;
  margin: 0 auto;
  width: 100%;
  text-align: center;
}

h1 {
  margin-bottom: 2rem;
  font-size: 2rem;
}

.input-group {
  margin-bottom: 1.5rem;
  text-align: left;
}

.input-group label,
.option-group label {
  display: block;
  font-weight: 600;
  margin-bottom: 0.5rem;
  font-size: 0.9rem;
  opacity: 0.9;
}

input[type="text"] {
  width: 100%;
  padding: 12px;
  border-radius: 8px;
  border: 1px solid #ccc;
  font-size: 1rem;
}

.options-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin-bottom: 2rem;
  text-align: left;
}

.button-row {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

button {
  cursor: pointer;
  transition: all 0.2s;
}

.button-row button {
  padding: 8px 16px;
  border-radius: 20px;
  border: 1px solid;
  background: transparent;
  font-weight: 500;
}

.button-row button:hover {
  opacity: 0.8;
}

/* Color Dots */
.color-dots {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.dot {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 2px solid transparent;
}

.dot:hover {
  transform: scale(1.1);
}

.active-dot {
  border-color: #000;
  transform: scale(1.1);
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

/* Generate Button */
.generate-btn {
  width: 100%;
  padding: 14px;
  border: none;
  border-radius: 8px;
  color: white;
  font-size: 1.1rem;
  font-weight: bold;
}

.generate-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* Slides Area */
.slides-container {
  padding: 2rem;
  flex: 1;
  display: flex;
  justify-content: center;
}

/* Settings Modal */
.settings-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(5px);
}

.settings-modal {
  width: 90%;
  max-width: 500px;
  background: #1e293b;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.settings-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.settings-header h2 {
  margin: 0;
  font-size: 1.5rem;
  background: linear-gradient(135deg, #60a5fa, #c084fc);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.close-btn {
  background: none;
  border: none;
  font-size: 2rem;
  color: #94a3b8;
  cursor: pointer;
  padding: 0;
  line-height: 1;
}

.description {
  color: #94a3b8;
  font-size: 0.9rem;
  margin-bottom: 1rem;
}

.description a {
  color: #60a5fa;
  text-decoration: none;
}

.input-with-icon {
  position: relative;
  display: flex;
}

.input-with-icon input {
  width: 100%;
  padding: 0.75rem 1rem;
  padding-right: 3rem;
  background: #0f172a;
  border: 1px solid #334155;
  border-radius: 8px;
  color: #fff;
  font-size: 1rem;
}

.eye-btn {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  font-size: 1.2rem;
  cursor: pointer;
  padding: 5px;
}

.settings-footer {
  margin-top: 2rem;
  display: flex;
  justify-content: flex-end;
}

.save-btn {
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  color: white;
  border: none;
  padding: 0.75rem 2rem;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: opacity 0.2s;
}

.save-btn:hover {
  opacity: 0.9;
}

.slides-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  width: 100%;
}

/* 
   LINKEDIN ASPECT RATIO: 4:5 
   We set a fixed aspect ratio for the preview cards so they look like the final PDF.
   Width: 100% of the grid column (min 300px)
   Height: Width / 0.8
*/
.slide-card {
  aspect-ratio: 4 / 5;
  padding: 2.5rem;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  position: relative;
  transition: transform 0.2s;
  overflow: hidden;
  /* Ensure content doesn't spill out */
}

.slide-card:hover {
  transform: translateY(-5px);
}

.slide-number {
  font-size: 3rem;
  font-weight: 900;
  opacity: 0.2;
  position: absolute;
  top: 10px;
  right: 20px;
}

.slide-card h2 {
  font-size: 1.5rem;
  margin-bottom: 1.5rem;
  padding-bottom: 0.5rem;
  width: 90%;
}

.slide-card ul {
  list-style-position: inside;
  margin-bottom: 2rem;
  flex: 1;
}

.slide-card li {
  margin-bottom: 0.8rem;
  line-height: 1.5;
}

.visual-cue {
  padding: 10px;
  border-radius: 6px;
  font-size: 0.85rem;
  opacity: 0.8;
  font-style: italic;
}

.empty-state {
  border: 2px dashed;
  padding: 4rem;
  border-radius: 12px;
  opacity: 0.5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.error {
  color: #ef4444;
  margin-top: 1rem;
}

/* Mobile Tweak */
@media (max-width: 600px) {
  .options-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
}